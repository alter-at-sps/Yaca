<Window x:Class="Yaca.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Yaca"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <!-- Number Display -->
        <TextBlock Grid.Row="0" Grid.ColumnSpan="4" FontSize="32" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15">87623578458734658</TextBlock>

        <!-- Function buttons -->

        <Button Grid.Column="0" Grid.Row="1" FontSize="28" Margin="5">%</Button>
        <Button Grid.Column="1" Grid.Row="1" FontSize="28" Margin="5">CE</Button>
        <Button Grid.Column="2" Grid.Row="1" FontSize="28" Margin="5">C</Button>
        <Button Grid.Column="3" Grid.Row="1" FontSize="24" Margin="5">BSpace</Button>

        <Button Grid.Column="0" Grid.Row="2" FontSize="28" Margin="5">1/x</Button>
        <Button Grid.Column="1" Grid.Row="2" FontSize="28" Margin="5">x²</Button>
        <Button Grid.Column="2" Grid.Row="2" FontSize="28" Margin="5">²√x</Button>
        <Button Grid.Column="3" Grid.Row="2" FontSize="28" Margin="5">/</Button>

        <!-- Numpad and Side buttons -->

        <Button Grid.Column="0" Grid.Row="3" FontSize="28" Margin="5">7</Button>
        <Button Grid.Column="1" Grid.Row="3" FontSize="28" Margin="5">8</Button>
        <Button Grid.Column="2" Grid.Row="3" FontSize="28" Margin="5">9</Button>
        <Button Grid.Column="3" Grid.Row="3" FontSize="28" Margin="5">*</Button>

        <Button Grid.Column="0" Grid.Row="4" FontSize="28" Margin="5">4</Button>
        <Button Grid.Column="1" Grid.Row="4" FontSize="28" Margin="5">5</Button>
        <Button Grid.Column="2" Grid.Row="4" FontSize="28" Margin="5">6</Button>
        <Button Grid.Column="3" Grid.Row="4" FontSize="28" Margin="5">-</Button>

        <Button Grid.Column="0" Grid.Row="5" FontSize="28" Margin="5">1</Button>
        <Button Grid.Column="1" Grid.Row="5" FontSize="28" Margin="5">2</Button>
        <Button Grid.Column="2" Grid.Row="5" FontSize="28" Margin="5">3</Button>
        <Button Grid.Column="3" Grid.Row="5" FontSize="28" Margin="5">+</Button>

        <Button Grid.Column="0" Grid.Row="6" FontSize="28" Margin="5">+/-</Button>
        <Button Grid.Column="1" Grid.Row="6" FontSize="28" Margin="5">0</Button>
        <Button Grid.Column="2" Grid.Row="6" FontSize="28" Margin="5">,</Button>
        <Button Grid.Column="3" Grid.Row="6" FontSize="28" Margin="5">=</Button>

    </Grid>
</Window>
